# GCV Backend Configuration
# Copy this file to .env and fill in the values.

# PostgreSQL Database
DATABASE_URL=postgresql://gcv_user:gcv_password@db/gcv_db

# Application Secret Key (change this in production!)
SECRET_KEY=a_very_secret_key_that_should_be_changed

# Google Gemini API Key
GEMINI_API_KEY="your_gemini_api_key_here"

# Google OAuth2 Credentials
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# SMTP Settings for Email Notifications (optional)
# Example for Mailhog (local testing)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_TLS=false
# EMAILS_FROM_EMAIL=noreply@gcv.local
# EMAILS_FROM_NAME=GCV
